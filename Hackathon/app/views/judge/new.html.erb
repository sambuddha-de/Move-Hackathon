<div class="page-container">
 <div class="container">
     <%= render :partial => 'common/header' %>
	 <div class="row row-offcanvas row-offcanvas-left">
	    <%= render :partial => '/adminlinks' %>
          <!-- main area -->
        <div class="col-xs-12 col-sm-9">
          <h2>New Judge</h2>
          <%= form_for :judge, url:judge_create_path  do |f| %>
           <fieldset class="form-group">
            <%= f.label(:name, "Name")%>
            <%= f.text_field :name, :class=>"form-control", :placeholder=>"Enter Name"  %>
           </fieldset>
           <fieldset class="form-group">
            <%= f.label(:password, "Password")%>
            <%= f.text_area :password, :class=>"form-control"  , :placeholder=>"Enter Password"  %>
           </fieldset>
          <fieldset class="form-group">
            <%= f.submit "Save Judge", :class=>"btn btn-primary" %>
             <%= link_to 'Back', {:action => 'list'} , :class=>"btn btn-primary"%>
           </fieldset>
        <% end %>
       
         </div><!-- /.col-xs-12 main -->
    </div><!--/.row-->
  </div><!--/.container-->
</div><!--/.page-container-->
